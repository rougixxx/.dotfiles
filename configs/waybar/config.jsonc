{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 35,
    "reload_style_on_change": true,
    "modules-left": [
        "cpu",
        "memory",
        "disk",
        "battery",
        "hyprland/workspaces"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "tray",
        "hyprland/language",
        "pulseaudio",
        "pulseaudio#microphone",
        "backlight",
        "custom/swaync"

     /*   "custom/binds",*/     
    ],
       "cpu": {
        "interval": 10,
        "format": "Ôãõ",
        "max-length": 10,
        "format-alt-click": "click-right",
        "format-alt": "Ôãõ {usage}%",
        "on-click": "kitty --start-as=fullscreen --title btop sh -c 'btop'"
    },

       "memory": {
        "interval": 30,
        "format": "ÔÉâ",
        "format-alt-click": "click-right",
        "format-alt": "ÔÉâ {}%",
        "max-length": 10,
        "tooltip": true,
        "tooltip-format": "Memory - {used:0.1f}GB used",
        "on-click": "kitty --start-as=fullscreen --title btop sh -c 'btop'"
    },
       "disk": {
        "interval": 30,
        "format": "Û∞ãä",
        "path": "/",
        "format-alt-click": "click-right",
        "format-alt": "Û∞ãä {percentage_used}%",
        "tooltip": true,
        "tooltip-format": "SSD - {used} used out of {total} on {path} ({percentage_used}%)",
        "on-click": "kitty --start-as=fullscreen --title NCDU sh -c 'ncdu /'"
    },
      "clock": {
        "timezone": "Africa/Algiers",
        "format": "{:%A, %e %B %Y, %I:%M %p}",
        "tooltip": true,
      /*  "tooltip-format": "{:ÔÅ≥  %A, %B %e %Y}"*/
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
                    "mode"          : "year",
                    "mode-mon-col"  : 3,
                    "weeks-pos"     : "right",
                    "on-scroll"     : 1,
                    "format": {
                              "months":     "<span color='#ffead3'><b>{}</b></span>",
                              "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                              "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                              "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                              "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
                              }
                    },
        "actions":  {
                    "on-click-right": "mode",
                    "on-scroll-up": "tz_up",
                    "on-scroll-down": "tz_down",
                    "on-scroll-up": "shift_up",
                    "on-scroll-down": "shift_down"
                    }
    },
    "hyprland/workspaces": {
        "active-only": false,
        "all-outputs": true,
        "format": "{icon}",
        "show-special": false,
        "on-click": "activate",
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "persistent-workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": [],
    },
    "format-icons": {
        "active": "ÔåÉ ",
        "default": "üó®",
    },

    },


    "hyprland/language": {
        "interval": 30,
        "format": "Ó©• {}",
        "format-en": "EN-us",
        "format-ar": "ara",
        "keyboard-name": "at-translated-set-2-keyboard",
        "on-click": "hyprctl switchxkblayout at-translated-set-2-keyboard next",
        "signal": 8
    },


 
    "battery": {
        "states": {
            "good": 95,
            "normal": 60,
            "warning": 20,
            "critical": 10
        },
        "format": "{icon}",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt-click": "click-right",
        "format-alt": "{icon} {capacity}%",
        "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]
    },

    "pulseaudio": {
        "format": "{icon}",
        "format-muted": "Ôë¶",
        "on-click": "~/.dotfiles/configs/waybar/scripts/volume --toggle",
        "on-click-right": "pavucontrol",
        "on-scroll-up": "~/.dotfiles/configs/waybar/scripts/volume --inc",
        "on-scroll-down": "~/.dotfiles/configs/waybar/scripts/volume --dec",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "tooltip": true,
        "tooltip-format": "{icon} at {volume}%"
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "on-click": "~/.dotfiles/configs/waybar/scripts/volume --toggle-mic",
        "on-click-right": "pavucontrol",
        "on-scroll-up": "~/.dotfiles/configs/waybar/scripts/volume --mic-inc",
        "on-scroll-down": "~/.dotfiles/configs/waybar/scripts/volume --mic-dec",
        "scroll-step": 5,
        "tooltip": true,
        "tooltip-format": "ÔÑ∞ at {volume}%"
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}",
        "format-alt-click": "click-right",
        "format-alt": "{icon} {percent}%",
        "format-icons": ["Û∞Éû", "Û∞Éü", "Û∞É†"],
        "tooltip": true,
        "tooltip-format": "Brightness at {percent}%",
        "on-scroll-up": "~/.dotfiles/configs/waybar/scripts/brightness --inc",
        "on-scroll-down": "~/.dotfiles/configs/waybar/scripts/brightness --dec"
    },

    "tray": {
        "icon-size": 20,
        "show-passive-items": true,
        "spacing": 15
    },
    "custom/swaync": {
        "tooltip": true,
        "tooltip-format": "Left Click: Launch Notification Center\nRight Click: Do not Disturb",
        "format": "{} {icon} ",
        "format-icons": {
        "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
        "none": "ÔÇ¢",
        "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
        "dnd-none": "Ôá∑",
        "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
        "inhibited-none": "ÔÇ¢",
        "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
        "dnd-inhibited-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "sleep 0.1 && swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true,
    },
/*q*/
